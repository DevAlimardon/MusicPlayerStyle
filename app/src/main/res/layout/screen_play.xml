<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playScreen"
    android:background="@drawable/animation_list"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/action_bar"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.skydoves.elasticviews.ElasticImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:imageView_duration="300"
        app:imageView_scale="0.7"
        android:id="@+id/back"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/centerImage"
        android:src="@drawable/music_image"
        android:background="@drawable/remote_image_bg"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name of the Music"
        android:textSize="22sp"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginTop="24dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/titleMusic"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/centerImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist of the Music"
        android:textSize="14sp"
        android:id="@+id/artistMusic"
        android:layout_margin="16dp"
        android:textColor="#80000000"
        app:layout_constraintTop_toBottomOf="@id/titleMusic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/seekBar"
        android:thumbTint="@color/white"
        android:progressTint="@color/white"
        android:progressBackgroundTint="#66FFFFFF"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/artistMusic"
        app:layout_constraintBottom_toTopOf="@id/playMusic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:id="@+id/timer"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration"
        android:layout_marginEnd="24dp"
        android:text="3:40"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/heart"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:layout_constraintTop_toBottomOf="@id/centerImage"
        app:layout_constraintBottom_toTopOf="@id/seekBar"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_heart"
        android:layout_margin="24dp"
        android:padding="15dp"
        android:id="@+id/addFavourite"
        app:layout_constraintBottom_toTopOf="@id/seekBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_play"

        android:padding="10dp"
        android:id="@+id/playMusic"
        app:layout_constraintTop_toTopOf="@id/previousMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/previousMusic"
        />
    <com.skydoves.elasticviews.ElasticImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:imageView_duration="300"
        app:imageView_scale="0.7"
        android:layout_marginTop="24dp"
        android:id="@+id/previousMusic"
        android:src="@drawable/ic_previous"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/playMusic"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.skydoves.elasticviews.ElasticImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:imageView_duration="300"
        app:imageView_scale="0.7"
        android:layout_marginTop="24dp"
        android:id="@+id/nextMusic"
        android:src="@drawable/ic_next"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintLeft_toRightOf="@id/playMusic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>