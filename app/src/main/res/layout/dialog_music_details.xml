<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycle_view_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/action_bar"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_back"
        android:id="@+id/mainImage"
        android:background="@drawable/item_image_bg"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#80000000"
        android:id="@+id/music_title1"
        app:layout_constraintTop_toBottomOf="@id/mainImage"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:id="@+id/music_title2"
        app:layout_constraintTop_toBottomOf="@id/music_title1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#80000000"
        android:id="@+id/music_artist1"
        app:layout_constraintTop_toBottomOf="@id/music_title2"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:id="@+id/music_artist2"
        app:layout_constraintTop_toBottomOf="@id/music_artist1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#80000000"
        android:id="@+id/duration1"
        app:layout_constraintTop_toBottomOf="@id/music_artist2"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:id="@+id/duration2"
        app:layout_constraintTop_toBottomOf="@id/duration1"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#80000000"
        android:id="@+id/size1"
        app:layout_constraintTop_toBottomOf="@id/duration2"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:id="@+id/size"
        app:layout_constraintTop_toBottomOf="@id/size1"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date added"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="#80000000"
        android:id="@+id/date1"
        app:layout_constraintTop_toBottomOf="@id/size"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:id="@+id/date"
        app:layout_constraintTop_toBottomOf="@id/date1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>